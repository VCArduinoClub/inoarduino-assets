{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema for INOArduino Lessons Index",
  "type": "object",
  "properties": {
    "lessons": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "lesson": {
            "type": "string"
          },
          "id": {
            "type": "number"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "file": {
            "type": "string"
          },
          "simCode": {
            "type": "string"
          },
          "element": {
            "type": "string"
          }
        },
        "required": [
          "lesson",
          "id",
          "title",
          "description",
          "file"
        ]
      }
    }
  },
  "required": [
    "lessons"
  ]
}
